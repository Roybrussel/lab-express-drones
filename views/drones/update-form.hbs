<h2>Updating {{name}}</h2>

<form action="/drones/{{_id}}/edit" method="post">

    <label for="name-input">Name: </label>
    <input type="text" name="name" id="name-input" value="{{name}}" />

    <label for="propellers-input">Propellers: </label>
    <input type="number" name="propellers" id="propellers-input" min="1" max="20" value="{{propellers}}" />

    <label for="maxSpeed-input">Maximum speed: </label>
    <input type="number" name="maxSpeed" id="maxSpeed-input" min="1" max="100" value="{{maxSpeed}}" />

    <button type="submit">Save changes</button>

</form>